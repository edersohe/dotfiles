{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "github-copilot/gemini-3-flash",
  "autoupdate": true,
  "layout": "stretch",
  "share": "disabled",
  "agent": {
    "commit-message-generator": {
      "mode": "primary",
      "model": "github-copilot/gpt-5-mini",
      "temperature": 0.1,
      "prompt": "You are a specialized commit message generator. Input: Git Diff. Output: Conventional Commit formatted message only. No explanations.",
      "tools": {
        "bash": false,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": false,
        "todoread": true,
        "webfetch": false,
      },
      "permission": {
        "bash": "deny",
        "edit": "deny",
        "webfetch": "deny"
      }
    }
  }
}
